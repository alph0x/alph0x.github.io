#!/bin/bash

# Simplified pre-push hook for GitHub Pages
echo "ğŸš€ Pre-push validation..."

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

print_status() {
    echo -e "${1}${2}${NC}"
}

# Step 1: Build check
echo "ğŸ”¨ Building project..."
if swift build > /dev/null 2>&1; then
    print_status $GREEN "âœ… Build successful"
else
    print_status $RED "âŒ Build failed. Push aborted."
    exit 1
fi

# Step 2: Basic test check
echo "ğŸ§ª Running API tests..."
if swift test --filter testPersonalInfoAPI > /dev/null 2>&1; then
    print_status $GREEN "âœ… API tests passed"
else
    print_status $RED "âŒ API tests failed. Push aborted."
    exit 1
fi

# Step 3: Check static files exist
echo "ğŸ“‚ Checking static files..."
if [ -f "docs/index.html" ] && [ -f "docs/es/index.html" ] && [ -f "docs/en/index.html" ]; then
    print_status $GREEN "âœ… Static files present"
else
    print_status $RED "âŒ Required static files missing. Push aborted."
    exit 1
fi

print_status $GREEN "ğŸ‰ All checks passed! Push proceeding..."
exit 0
